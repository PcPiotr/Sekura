<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.ui.Tab3">


    <Button
            android:text="@string/settings_auth_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_pin"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
            android:text="@string/settings_auth_disable"
            android:layout_width="match_parent"
            android:layout_below="@+id/button_pin"
            android:layout_height="wrap_content" android:id="@+id/button_pin_reset"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
            android:text="@string/settings_root_ask"
            android:layout_width="match_parent"
            android:layout_below="@+id/button_pin_reset"
            android:layout_height="wrap_content" android:id="@+id/button_root_ask"
            style="@style/Widget.AppCompat.Button.Borderless"/>
</RelativeLayout>